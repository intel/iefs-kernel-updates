#!/usr/bin/make -f
# See debhelper(7) (uncomment to enable)
# output every command that modifies files on the build system.
#export DH_VERBOSE = 1

export V = @DEBVERSION@
export arch = $(uname -p)
export kver = $(uname -r)

# see FEATURE AREAS in dpkg-buildflags(1)
#export DEB_BUILD_MAINT_OPTIONS = hardening=+all

# see ENVIRONMENT in dpkg-buildflags(1)
# package maintainers to append CFLAGS
#export DEB_CFLAGS_MAINT_APPEND  = -Wall -pedantic
# package maintainers to append LDFLAGS
#export DEB_LDFLAGS_MAINT_APPEND = -Wl,--as-needed

override_dh_auto_build:
		./debian/domake

%:
		dh $@

override_dh_auto_install:
#		BUILDDIR=$(CURDIR) \
#		DESTDIR=$(CURDIR)/$(DESTDIR)
		echo installing from $(CURDIR)
		mkdir -p lib/modules/@DEBVERSION@/extra/iefs-kernel-updates
		cp rv/rv.ko lib/modules/@DEBVERSION@/extra/iefs-kernel-updates
		mkdir -p etc/depmod.d
		cp ../debbuild/iefs-kernel-updates.conf etc/depmod.d
		mkdir -p etc/modules-load.d
		cp ../debbuild/modules-load.conf etc/modules-load.d/iefs-kernel-updates.conf
		mkdir -p usr/src/iefs-kernel-updates-@DEBRELEASE@/rv_default
		cp modules.order usr/src/iefs-kernel-updates-@DEBRELEASE@/rv_default
		cp rv/* rv/.*.cmd usr/src/iefs-kernel-updates-@DEBRELEASE@/rv_default
		mkdir -p usr/src/iefs-kernel-updates-@DEBRELEASE@/include/uapi/rdma
		cp rv/rv_user_ioctls.h usr/src/iefs-kernel-updates-@DEBRELEASE@/include/uapi/rdma
		cp -r LICENSE Makefile Module.symvers built-in.a compat dkms.conf include modules.order usr/src/iefs-kernel-updates-@DEBRELEASE@
		(cd /usr/src/linux-headers-$(DEFAULT_KERNEL_VERSION);sh -x ./scripts/headers_install.sh $(CURDIR)/rv/rv_user_ioctls.h $(CURDIR)/usr/src/iefs-kernel-updates-@DEBRELEASE@/include/uapi/rdma/rv_user_ioctls.h)
		mkdir -p usr/include/rdma
		cp rv/rv_user_ioctls.h usr/include/rdma
		(cd usr/src/iefs-kernel-updates-@DEBRELEASE@; ln -s rv_default rv)


